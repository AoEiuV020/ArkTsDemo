{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",  
  "displayName": "proto",
  "roots": ["<rootDir>/src", "<rootDir>/__tests__"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true
    }],
    "^.+\\.js$": ["ts-jest", {
      "useESM": true
    }]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(protobufjs)/)"
  ],
  "extensionsToTreatAsEsm": [".ts"],  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@packages/(.*)$": "<rootDir>/../$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/*.test.ts",
    "!src/test/**",
    "!src/main/**",
    "!src/ohosTest/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/src/test/", "/src/main/", "/src/ohosTest/"]
}
