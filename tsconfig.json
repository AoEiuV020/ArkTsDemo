{
  "compilerOptions": {
    /* 基础配置 */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ES2020"],

    /* 严格模式（必填） */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,

    /* 禁用ArkTS不支持的特性 */
    "useDefineForClassFields": true,
    "downlevelIteration": false,
    "skipLibCheck": false,

    /* 模块相关 */
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* 输出配置 */
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* 类型检查 */
    "types": ["jest", "node"],
    "disableSizeLimit": true,

    /* 路径映射 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@packages/*": ["./packages/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/index.ts",
    "packages/*/__tests__/**/*",
  ],
  "exclude": [
    "node_modules",
    "oh_modules",
    "dist",
    "build",
    "coverage",
    "src/main/**",
    "src/ohosTest/**",
    "src/test/**",
    "packages/*/src/test/**",
    "packages/*/src/main/**",
    "packages/*/src/ohosTest/**",
    "hvigorfile.ts",
    "build-profile.json5",
    "BuildProfile.ets",
    "examples",
    "**/*.ets",
    "**/*.json5"
  ]
}
